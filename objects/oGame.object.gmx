            <string>///Game Controller
// checks if player is alive, changes rooms, etc.



if (!instance_exists(oPlayer) )
{
    //when player is dead, automatically take turns every 6 gamesteps
    if (turn_timer_dead &lt;= 0)
    {
        turn_timer_dead = 6;
        turn = true;
    }
    else
    {
        turn_timer_dead -= 1;
        //turn = false;
    }
    
    if (!instance_exists(oMessage))
    {
        oScreen.alpha = 0;
        background_colour = c_maroon;
        create_message(10, 10, "U DIDN'T MAKE IT#PRESS ENTER");
    }
    else if (oScreen.alpha &gt;= 1)
    {
        background_colour = c_black;
    }
    else
    {
        oScreen.alpha += 0.05;
    }
    if keyboard_check_pressed(vk_enter)
    {
        audio_stop_all();
        room_restart();
    }
    if (!instance_exists(oBlood))
    {
        //sets enemies to leave the room
        with (oEnemy)
        {
            if (check_OOB(x, y, 2, 2, oGame.r_width - 3, oGame.r_height - 3) &gt;= 0)
            {
                oGame.map_creatures[x, y] = oGame.map_objects[x, y];
                instance_destroy();
            }
        }
    }
}
else
{
    check_room_change();
}

if (turn == true)
{
    if ((global.game_timer - global.room_timer) &gt;= 40)
    {
        if (irandom(10) == 0)
        {
            create_creature(irandom_range(1, r_width - 2), choose(1, r_height - 2), "fly");
        }
    }
}

if (keyboard_check_pressed(ord('D')))
{
    global.debug = !global.debug;
